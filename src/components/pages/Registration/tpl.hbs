<form class='registr' action='#/login'>
  <div class='wrapper__form wrapper-txt'>
    <label class='registr-txt'>Регистрация</label>
    <input
      type='email'
      name='email'
      placeholder='Почта'
      class='registr-input'
    />
    <span class='for-error'>wrong email</span>
    <input type='text' name='login' class='registr-input' placeholder='Логин' />
    <span class='for-error'>bad login</span>
    <input
      type='text'
      name='first_name'
      placeholder='Имя'
      class='registr-input'
    />
    <span class='for-error'></span>
    <input
      type='text'
      name='second_name'
      placeholder='Фамилия'
      class='registr-input'
    />
    <span class='for-error'></span>
    <input
      type='tel'
      name='phone'
      placeholder='Телефон'
      class='registr-input'
    />
    <span class='for-error'>not a number</span>
    <input
      type='password'
      name='password'
      class='registr-input'
      placeholder='Пароль'
    />
    <span class='for-error'>to short password</span>
    <input
      type='password'
      name='password'
      class='registr-input'
      placeholder='Пароль (ещё раз)'
    />
    <span class='for-error'>Пароли не совпадают</span>
  </div>
  <div class='wrapper__form wrapper-btn'>
    {{{button}}}
    <a href='#/login'>Войти</a>
  </div>
</form>
<nav class='links'>
  <a href='#/login'>Login</a>
  <a href='#/registration'>Registration</a>
  <a href='#/profile'>Profile</a>
  <a href='#/404'>Page not found</a>
  <a href='#/500'>Server error</a>
  <a href='#/chat'>Chat</a>
</nav>
