<form class='registr' action="#/login">
  <div class='wrapper__form wrapper-txt'>
    <label class='registr-txt'>Регистрация</label>
    <input type='email' placeholder='Почта' class='registr-input' />
    <input type='text' name='login' class='registr-input' placeholder='Логин' />
    <input type='text' placeholder='Имя' class='registr-input' />
    <input type='text' placeholder='Фамилия' class='registr-input' />
    <input type='tel' placeholder='Телефон' class='registr-input' />
    <input type='password' class='registr-input' placeholder='Пароль' />
    <input
      type='password'
      class='registr-input'
      placeholder='Пароль (ещё раз)'
    />
    <p class='pass-text'>Пароли не совпадают</p>
  </div>
  <div class='wrapper__form wrapper-btn'>
    {{> Button id='register-btn' value='Зарегистрироваться'}}
    <a href='#/login'>Войти</a>
  </div>
</form>
<div class='links'>
  <a href='#/login'>Login</a>
  <a href='#/registration'>Registration</a>
  <a href='#/404'>Page not found</a>
  <a href='#/500'>Server error</a>

</div>