{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "color-hex-case": "lower"
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*",
    ".parcel-cache/*",
    ".github/*",
    "**/*"
  ],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss"],
      "rules": {}
    }
  ]
}
